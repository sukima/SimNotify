<% title "Welcome" %>

<p>Don't have an account? <%= link_to "Sign up!", signup_path %></p>

<% form_for @instructor_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Next" %></p>
<% end %>
