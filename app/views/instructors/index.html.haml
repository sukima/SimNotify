- title "Instructors"
- wide_content
%table
  %thead
    %tr
      %th Name
      %th Department
      %th Email
      %th Phone
      %th Admin
      %th Actions
  %tbody
    - for instructor in @instructors
      - inactive_class = (instructor.active?) ? "" : "instructor_inactive"
      %tr
        %td{:class=>inactive_class}
          = name_with_gravatar(instructor)
          - if !instructor.active?
            %span.ui-icon.ui-icon-locked{:style=>"float:right;margin-left:.3em"}
        %td{:class=>inactive_class}= h instructor.office
        %td{:class=>inactive_class}= h instructor.email
        %td{:class=>inactive_class}= h instructor.phone
        %td
          - if instructor.admin?
            %span.ui-icon.ui-icon-check Yes
          - else
            &nbsp;
        %td
          = link_icon_to "pencil", t(:edit), edit_instructor_path(instructor)
%p= link_to_confirm "New instructor", new_instructor_path
%p= link_to_confirm "Return", root_path
