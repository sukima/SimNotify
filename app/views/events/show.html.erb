<% title "Event" %>

<p>
  <strong>Location:</strong>
  <%=h @event.location %>
</p>
<p>
  <strong>Benefit:</strong>
  <%=h @event.benefit %>
</p>
<p>
  <strong>Notes:</strong>
  <%=h @event.notes %>
</p>
<p>
  <strong>Start Time:</strong>
  <%=h @event.start_time %>
</p>
<p>
  <strong>End Time:</strong>
  <%=h @event.end_time %>
</p>
<p>
  <strong>Live In:</strong>
  <%=h @event.live_in %>
</p>
<p>
  <strong>Instructor:</strong>
  <%=h @event.instructor.name %>
</p>
<p>
  <strong>Created at:</strong>
  <%=h @event.created_at %>
</p>
<p>
  <strong>Last Updated:</strong>
  <%=h @event.updated_at %>
</p>

<div id="scenarios">
  <h2>Scenarios</h2>
  <% if @event.scenarios.empty? %>
    <div class="box">No scenarios defined yet!</div>
  <% else %>
    <% @event.scenarios.each_with_index do |scenario, index| %>
      <div class="box border">
        <p><%= index.odinalize %> scenario: [ <% link_to "Edit", edit_scenario_path(scenario) %></p>
        <p><strong><%=h scenario.manikin.name %> (<%= scenario.manikin.type %>)</strong></p>
        <p>
        <%=h scenario.description %>
        </p>
      </div>
    <% end %>
  <% end %>
  <div class="box"><%= link_to "Add a scenario", new_event_scenario_path(@event) %></div>
</div>

<p>
  <%= link_to "Edit", edit_event_path(@event) %> |
  <%= link_to "Destroy", @event, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", events_path %>
</p>
